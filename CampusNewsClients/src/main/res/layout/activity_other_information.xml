<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">

        <LinearLayout
            android:layout_marginStart="@dimen/gap_in_user_information"
            android:layout_marginEnd="@dimen/gap_in_user_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/user_information_margin_start"
                android:id="@+id/accounts_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/like_amount_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="获赞总数"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/focus_amount_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="关注数"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/focused_amount_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="被关注数"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/numbers_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/like_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="888"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center" />

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/focus_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="888"
                    android:textSize="18sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/focused_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="888"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/gap_in_user_information"
                android:layout_marginBottom="@dimen/gap_in_user_information"
                android:background="@color/account_account_bind" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_in_user_information"
                android:layout_marginBottom="@dimen/gap_in_user_information"
                android:text="西安电子科技大学"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_drawer_appstore"
                android:layout_marginStart="@dimen/user_information_margin_start"
                android:drawablePadding="@dimen/user_information_imageview_padding_right" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_in_user_information"
                android:layout_marginBottom="@dimen/gap_in_user_information"
                android:text="西安电子科技大学"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_drawer_appstore"
                android:layout_marginStart="@dimen/user_information_margin_start"
                android:drawablePadding="@dimen/user_information_imageview_padding_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_in_user_information"
                android:layout_marginBottom="@dimen/gap_in_user_information"
                android:text="男 18岁 双鱼座"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_drawer_favorite_normal"
                android:layout_marginStart="@dimen/user_information_margin_start"
                android:drawablePadding="@dimen/user_information_imageview_padding_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_in_user_information"
                android:layout_marginBottom="@dimen/gap_in_user_information"
                android:text="陕西省   西安市"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_drawer_offline"
                android:layout_marginStart="@dimen/user_information_margin_start"
                android:drawablePadding="@dimen/user_information_imageview_padding_right" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/gap_in_user_information"
                android:layout_marginBottom="@dimen/gap_in_user_information"
                android:background="@color/account_account_bind" />
            <LinearLayout
                android:id="@+id/personal_information_on_debate_layout"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">


                <RelativeLayout
                    android:id="@+id/my_topic_holder_layout"
                    android:layout_margin="@dimen/gap_in_user_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="他的辩题"
                        android:textSize="@dimen/user_large_text_size"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/user_information_margin_start" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="@dimen/user_large_text_size"
                        android:textColor="#000000"
                        android:layout_alignParentRight="true"

                        android:drawablePadding="@dimen/user_information_margin_start"
                        android:drawableRight="@drawable/arrow_drawer" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_point_holder_layout"
                    android:layout_margin="@dimen/gap_in_user_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="他的论点"
                        android:textSize="@dimen/user_large_text_size"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/user_information_margin_start" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="55"
                        android:textSize="@dimen/user_large_text_size"
                        android:textColor="#000000"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/user_information_margin_start"
                        android:drawableRight="@drawable/arrow_drawer" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_presentation_holder_layout"
                    android:layout_margin="@dimen/gap_in_user_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="他的发言"
                        android:textSize="@dimen/user_large_text_size"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/user_information_margin_start" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="555"
                        android:textSize="@dimen/user_large_text_size"
                        android:textColor="#000000"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/user_information_margin_start"
                        android:drawableRight="@drawable/arrow_drawer" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="@color/colorPrimary">
            <ImageView
                android:id="@+id/other_information_background"
                android:src="#ffcc66"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <TextView
                    android:id="@+id/back_nav_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/back_direction"
                    android:gravity="center_vertical"
                    android:text="返回"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/tool_bar_back_text_size" />
            </android.support.v7.widget.Toolbar>
            <RelativeLayout
                android:id="@+id/other_information_layout"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/other_user_portrait"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/default_round_head" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/other_user_portrait"
                    android:layout_below="@+id/other_user_portrait"
                    android:layout_marginStart="@dimen/gap_in_user_information"
                    android:layout_marginTop="@dimen/gap_in_user_information" />

                <TextView
                    android:id="@+id/other_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/other_user_portrait"
                    android:layout_marginStart="@dimen/user_information_margin_start"
                    android:layout_toRightOf="@id/other_user_portrait"
                    android:text="你是不是傻"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/other_information_signal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/other_nick_name"
                    android:layout_below="@id/other_nick_name"
                    android:layout_marginStart="@dimen/gap_in_user_information"
                    android:layout_marginTop="@dimen/user_information_margin_start"
                    android:text="这是一条个性签名"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/user_large_text_size" />

                <LinearLayout
                    android:id="@+id/other_honor_show_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/button3"
                    android:layout_alignStart="@+id/other_information_signal"
                    android:layout_marginBottom="21dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/blue_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Lv.7"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/user_large_text_size" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>
