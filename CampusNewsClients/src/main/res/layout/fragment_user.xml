<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_portrait"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="@dimen/general_user_small_padding"
        android:src="@drawable/default_round_head"/>
    <TextView
        android:id="@+id/user_name"
        android:text="大笨钟"
        android:layout_toEndOf="@id/user_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:textSize="@dimen/other_small_text_size"/>

    <TextView
        android:id="@+id/user_personal_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黑暗是光明与生命之母"
        android:layout_toEndOf="@id/user_portrait"
        android:layout_below="@id/user_name"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_alignStart="@id/user_name"
        android:textSize="@dimen/other_small_text_size"/>
    <Button
        android:id="@+id/focus_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_personal_signal"
        android:layout_margin="@dimen/text_margin"
        android:layout_centerVertical="true"
        android:text="关注"/>
</RelativeLayout>
